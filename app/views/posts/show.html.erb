<h2> <%= @post.title %></h2>
<p><%= @post.body %></p>

<% if user_signed_in? && current_user.admin? %>
	<hr>
	<%= link_to "Edit", edit_admin_post_path(@post), :class => 'btn btn-default' %>
	<%= link_to "Delete", admin_post_path(@post), 
				method: :delete,
				data: {confirm: 'Are you sure?'},
				:class => 'btn btn-danger' %>
	<hr>
<% end %>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
	<div class="well">
		<p><strong><%= comment.username %></strong>: <%= comment.body %></p>
	</div>
<% end %>

<% if user_signed_in? %>
<h1>Add comment</h1>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |msg| %>
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>
	<% end %>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field(:username, {:class => 'form-control', :style =>'width: 200px'}) %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area(:body, {:class => 'form-control', :style =>'width: 400px; height: 150px; resize: none;'}) %>
	</p>

	<p>
		<%= f.submit({:class => 'btn btn-primary'}) %>
	</p>
<% end %>
<% end %>